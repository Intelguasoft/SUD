@model IEnumerable<SUD.Models.Order>

@{
    ViewBag.Title = "Ordenes";
    ViewBag.Message = "Listado de Ordenes";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        <!--aqui va el titulo de la pagina que se va a mostrar, como el siguiente ejemplo -->
        @ViewBag.Title - <small>@ViewBag.Message</small>
    </h1>
    <ol class="breadcrumb">
        <li class="active"><i class="fa fa-pencil-square-o"></i> Ordenes</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Listado de Ordenes</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove" disabled>
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <!-- Aca se incluye todo el contenido de la pagina que se desea mostrar -->
            <!-- por ejemplo el index/tabla de algun recurso -->
            <p>
                <a href="@Url.Action("AddProduct")" class="btn btn-success"> <i class="fa fa-plus" aria-hidden="true"></i> Crear</a>
            </p>

            <table class="table table-bordered table-striped text-center" id="tblOrders">
                <thead>
                    <tr>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.OrderId)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.Cellar.Description)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.Client.ComertialName)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.Route.RouteNumber)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cellar.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Client.ComertialName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Route.RouteNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                <div class="btn-group">
                                    @*@Html.ActionLink(" ", "Edit", new { id = item.OrderId }, new { @class = "btn btn-warning fa fa-pencil-square-o" })*@
                                    @Html.ActionLink(" ", "Details", new { id = item.OrderId }, new { @class = "btn btn-info fa fa-info-circle" })
                                    @*@Html.ActionLink(" ", "Delete", new { id = item.OrderId }, new { @class = "btn btn-danger fa fa-trash" })*@
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <!-- Aca se incluye aquellas acciones relacionadas con lo antes mostrado -->
            <!-- por ejemplo botones de facturacion, exportar a excel/pdf o similares -->
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


    <script>

        $(document).ready(function () {
            $('#tblOrders').DataTable();
        });

    </script>


}

