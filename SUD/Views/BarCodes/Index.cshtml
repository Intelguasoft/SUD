@model IEnumerable<SUD.Models.BarCode>

@{
    ViewBag.Title = "Código de Barra";
    ViewBag.Message = "Listado de Códigos de Barra";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        <!--aqui va el titulo de la pagina que se va a mostrar, como el siguiente ejemplo -->
        @ViewBag.Title - <small>@ViewBag.Message</small>
    </h1>
    <ol class="breadcrumb">
        <li class="active">Códigos de Barras</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Listado de Códigos de Barras</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove" disabled>
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <!-- Aca se incluye todo el contenido de la pagina que se desea mostrar -->
            <!-- por ejemplo el index/tabla de algun recurso -->


            <p>
                <a href="@Url.Action("Create")" class="btn btn-success"> <i class="fa fa-plus" aria-hidden="true"></i> Crear</a>
            </p>

            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Product.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bar)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bar)
                        </td>
                        <td>
                            @Html.ActionLink(" ", "Edit", new { id = item.BarCodeId }, new { @class = "btn btn-warning fa fa-pencil-square-o" }) |
                            @Html.ActionLink(" ", "Details", new { id = item.BarCodeId }, new { @class = "btn btn-info fa fa-info-circle" }) |
                            @Html.ActionLink(" ", "Delete", new { id = item.BarCodeId }, new { @class = "btn btn-danger fa fa-trash" })
                        </td>
                    </tr>
                }

            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <!-- Aca se incluye aquellas acciones relacionadas con lo antes mostrado -->
            <!-- por ejemplo botones de facturacion, exportar a excel/pdf o similares -->
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
