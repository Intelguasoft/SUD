@model SUD.Models.RolPermission


@{
    ViewBag.Title = "Permisos de perfil";
    ViewBag.Message = "Modificar permisos ";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <!--aqui va el titulo de la pagina que se va a mostrar, como el siguiente ejemplo -->
            @ViewBag.Title - <small>@ViewBag.Message</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index")">Permisos</a></li>
            <li class="active">Modificar</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">¿Desea hacer algún cambio en el permiso seleccionado?</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove" disabled>
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <!-- Aca se incluye todo el contenido de la pagina que se desea mostrar -->
                <!-- por ejemplo el index/tabla de algun recurso -->

                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.PermissionId)

                        <div class="form-group">
                            @Html.LabelFor(model => model.RolId, htmlAttributes: new { @class = "" })
                            @Html.DropDownList("RolId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RolId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Form, htmlAttributes: new { @class = "" })

                            @Html.EditorFor(model => model.Form, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Form, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-check-inline">
                        <div class="col-xs-12 col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.CanSee, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.CanSee, new { htmlAttributes = new { @class = "col-md-1 " } })
                                @Html.ValidationMessageFor(model => model.CanSee, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-xs-12 col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.CanModify, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.CanModify, new { htmlAttributes = new { @class = "col-md-1 " } })
                                @Html.ValidationMessageFor(model => model.CanModify, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.CanErase, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.CanErase, new { htmlAttributes = new { @class = "col-md-1 " } })
                                @Html.ValidationMessageFor(model => model.CanErase, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- /.box-body -->
            <div class="box-footer">
                <!-- Aca se incluye aquellas acciones relacionadas con lo antes mostrado -->
                <!-- por ejemplo botones de facturacion, exportar a excel/pdf o similares -->
                <div class="row">
                    <div class="col-md-offset-5">
                        <div class="form-group">
                            <a href="@Url.Action("Index")" class="btn btn-success"> <i class="fa fa-undo" aria-hidden="true"></i> Regresar</a>
                            <button type="submit" class="btn btn-info">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
