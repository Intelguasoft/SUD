@model SUD.Models.CellarProduct

@{
    ViewBag.Title = "Productos en Bodega";
    ViewBag.Message = "Asignar Productos";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <!--aqui va el titulo de la pagina que se va a mostrar, como el siguiente ejemplo -->
            @ViewBag.Title - <small>@ViewBag.Message</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index")"><i class="fa fa-bank"></i> Productos en Bodega</a></li>
            <li class="active">Crear</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Productos en Bodega</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove" disabled>
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <!-- Aca se incluye todo el contenido de la pagina que se desea mostrar -->
                <!-- por ejemplo el index/tabla de algun recurso -->
                <div class="row">
                    <div class="col-xs-12 col-md-4">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.CellarId, "Bodega", htmlAttributes: new { @class = "" })
                            @Html.DropDownList("CellarId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CellarId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ProductId, "Bodega", htmlAttributes: new { @class = "" })
                            @Html.DropDownList("ProductId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Stock, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control", placeholder = "Asigne Existencia" } })
                            @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12 col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Minimum, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Minimum, new { htmlAttributes = new { @class = "form-control", placeholder = "Asigne Minimo" } })
                            @Html.ValidationMessageFor(model => model.Minimum, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Maximum, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Maximum, new { htmlAttributes = new { @class = "form-control", placeholder = "Asigne Maximo" } })
                            @Html.ValidationMessageFor(model => model.Maximum, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ReplacementDays, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.ReplacementDays, new { htmlAttributes = new { @class = "form-control", placeholder = "Dias de Reposicion" } })
                            @Html.ValidationMessageFor(model => model.ReplacementDays, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MinimumAmount, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.MinimumAmount, new { htmlAttributes = new { @class = "form-control", placeholder = "Minimo a solicitar" } })
                            @Html.ValidationMessageFor(model => model.MinimumAmount, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12 col-md-offset-3 col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                    

            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <!-- Aca se incluye aquellas acciones relacionadas con lo antes mostrado -->
                <!-- por ejemplo botones de facturacion, exportar a excel/pdf o similares -->
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a href="@Url.Action("Index")" class="btn btn-success"> <i class="fa fa-undo" aria-hidden="true"></i> Regresar</a>

                        <button type="submit" class="btn btn-primary">

                            <i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar
                        </button>
                    </div>
                </div>

            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
</section>
    <!-- /.content -->


}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
